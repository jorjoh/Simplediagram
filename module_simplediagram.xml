<?xml version="1.0" encoding="UTF-8"?>
<project name="module_simplediagram" default="compile.module.simplediagram">
  <dirname property="module.simplediagram.basedir" file="${ant.file.module_simplediagram}"/>
  
  <property name="module.jdk.home.simplediagram" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.simplediagram" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.simplediagram" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.simplediagram" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="simplediagram.output.dir" value="${module.simplediagram.basedir}/out/production/simplediagram"/>
  <property name="simplediagram.testoutput.dir" value="${module.simplediagram.basedir}/out/test/simplediagram"/>
  
  <path id="simplediagram.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="simplediagram.module.production.classpath">
    <path refid="${module.jdk.classpath.simplediagram}"/>
    <path refid="library.easylib.classpath"/>
  </path>
  
  <path id="simplediagram.runtime.production.module.classpath">
    <pathelement location="${simplediagram.output.dir}"/>
    <path refid="library.easylib.classpath"/>
  </path>
  
  <path id="simplediagram.module.classpath">
    <path refid="${module.jdk.classpath.simplediagram}"/>
    <pathelement location="${simplediagram.output.dir}"/>
    <path refid="library.easylib.classpath"/>
  </path>
  
  <path id="simplediagram.runtime.module.classpath">
    <pathelement location="${simplediagram.testoutput.dir}"/>
    <pathelement location="${simplediagram.output.dir}"/>
    <path refid="library.easylib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.simplediagram">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.simplediagram">
    <patternset refid="excluded.from.module.simplediagram"/>
  </patternset>
  
  <path id="simplediagram.module.sourcepath">
    <dirset dir="${module.simplediagram.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.simplediagram" depends="compile.module.simplediagram.production,compile.module.simplediagram.tests" description="Compile module simplediagram"/>
  
  <target name="compile.module.simplediagram.production" depends="register.custom.compilers" description="Compile module simplediagram; production classes">
    <mkdir dir="${simplediagram.output.dir}"/>
    <javac2 destdir="${simplediagram.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.simplediagram}/javac">
      <compilerarg line="${compiler.args.simplediagram}"/>
      <bootclasspath refid="simplediagram.module.bootclasspath"/>
      <classpath refid="simplediagram.module.production.classpath"/>
      <src refid="simplediagram.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.simplediagram"/>
    </javac2>
    
    <copy todir="${simplediagram.output.dir}">
      <fileset dir="${module.simplediagram.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.simplediagram.tests" depends="register.custom.compilers,compile.module.simplediagram.production" description="compile module simplediagram; test classes" unless="skip.tests"/>
  
  <target name="clean.module.simplediagram" description="cleanup module">
    <delete dir="${simplediagram.output.dir}"/>
    <delete dir="${simplediagram.testoutput.dir}"/>
  </target>
</project>